/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": ["ES2022", "dom"],
    "paths": {
      "@environments/*": ["environments/*"],
      "@services/*": ["app/core/services/*"],
      "@models/*": ["app/core/models/*"],
      "@constant/*": ["app/core/constant/*"],
      "@interceptors/*": ["app/core/interceptors/*"],
      "@tokens/*": ["app/core/tokens/*"],
      "@guards/*": ["app/core/guards/*"],
      "@layout/*": ["app/layout/*"],
      "@features/*": ["app/features/*"],
      "@state/*": ["app/core/states/*"],
      "@stores/*": ["app/core/stores/*"],
      "@directives/*": ["app/shared/directives/*"],
      "@utilities/*": ["app/shared/utilities/*"],
      "@components/*": ["app/shared/components/*"],
      "@mocks/*": ["app/shared/mocks/*"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
